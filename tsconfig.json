
{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "moduleResolution": "node",
      "lib": ["ES6"],
      "outDir": "server/dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "server/src/types/*"
        ]
      }
    },
    "include": [
      "server/src/**/*"
    ]
}